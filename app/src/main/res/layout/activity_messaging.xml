<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_messaging"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="morgantech.com.gms.Messaging">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/guardit" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Messaging"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wslogo" />

        </LinearLayout>

        <View
            android:id="@+id/vw_header"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_header"
            android:background="@color/colorPrimary"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view_btm"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_foot"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"></View>


    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:textColor="#ffffff">

        <LinearLayout
            android:id="@+id/ll_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/people"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar_blue" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Events" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/events" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Schedule" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/settings" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Settings" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/about" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="About" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
