<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ViewEvent">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guardit" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="System Events"
            android:textColor="#000000"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wslogo" />

    </LinearLayout>

    <View
        android:id="@+id/vw_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_head"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:id="@+id/ll_secheader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/vw_header"

        android:background="#F7F8FA"
        android:orientation="horizontal"
        android:weightSum="1">

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:textColor="@color/textcolor" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:id="@+id/ll_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_month"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_gray_border"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_offline"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_red"
                android:text="August"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5f6f8"
                android:gravity="center"
                android:text="OFFLINE"
                android:textColor="@color/textcolor"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_secheader"
        android:orientation="horizontal"
        android:weightSum="1">

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".19"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="14dp" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".19"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="Severity"
            android:textColor="#000000"
            android:textSize="14dp" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".19"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="Remark"
            android:textColor="#000000"
            android:textSize="14dp" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".19"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="14dp" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".14"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="Status"
            android:textColor="#000000"
            android:textSize="14dp" />

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/rect_border"
            android:gravity="center"
            android:text="View"
            android:textColor="#000000"
            android:textSize="14dp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_view_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:layout_marginBottom="56dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:textColor="#ffffff">

                <LinearLayout
                    android:id="@+id/ll_events"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/people"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/calendar_blue" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Events" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_schedule"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/events" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Schedule" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/home" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Home" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/settings" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Settings" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/about" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="About" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
