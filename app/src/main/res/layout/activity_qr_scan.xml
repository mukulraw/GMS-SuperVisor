<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_scan_guard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/guardit" />

                <morgantech.com.gms.Utils.TextViewWorkSansRegular
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="NFC Scan"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wslogo" />


            </LinearLayout>

            <View
                android:id="@+id/vw_header"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_header"
                android:background="@color/colorPrimary"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_nfc"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/qrscan"></ImageView>

                <morgantech.com.gms.Utils.TextViewWorkSansRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Click TO SCAN...."
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/shadow_1"></View>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_lower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <morgantech.com.gms.Utils.TextViewWorkSansRegular
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_bak"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rect_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp">

                            <ImageView
                                android:id="@+id/iv_stat"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="STATUS"
                                android:textColor="@color/textcolor"
                                android:textSize="13dp"
                                android:visibility="gone" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_bak"
                            android:gravity="center"
                            android:orientation="vertical">

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:textColor="@color/textcolor"
                                android:textSize="10dp" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/tv_role"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rect_bak"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:textColor="@color/textcolor"
                                android:textSize="8dp" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/tv_sex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rect_bak"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="Ashwini Agarwal"
                                android:textColor="@color/textcolor"
                                android:textSize="8dp" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/tv_empcode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rect_bak"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="Ashwini Agarwal"
                                android:textColor="@color/textcolor"
                                android:textSize="8dp" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/tv_shiftid"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rect_bak"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="Ashwini Agarwal"
                                android:textColor="@color/textcolor"
                                android:textSize="8dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <ImageView
                                android:id="@+id/iv_profimg"
                                android:layout_width="70dp"
                                android:layout_height="67dp"
                                android:scaleType="centerCrop" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:text="STATUS"
                                android:textSize="13dp"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_inflate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="1">

                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_scantxt"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="10dp"
                            android:background="#00B0F0"
                            android:text="SCAN NEXT CODE"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:id="@+id/ll_report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight=".33"
                                android:background="#E46C0A"
                                android:text="Report\n Overtime"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight=".33"
                                android:background="#E46C0A"
                                android:text="Report As New"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight=".33"
                                android:background="#00B0F0"
                                android:text="SCAN TEXT TAG"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <EditText

                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/txt_bak_ground"
                    android:hint="Enter Your Name"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_btm"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_main"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/view_btm"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:textColor="#ffffff">

                <LinearLayout
                    android:id="@+id/ll_events"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/people"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/calendar_blue" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Events" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_schedule"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/events" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Schedule" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/home" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Home" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/settings" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Settings" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/about" />

                    <morgantech.com.gms.Utils.TextViewWorkSansRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="About" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
