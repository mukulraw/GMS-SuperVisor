<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    tools:context="morgantech.com.gms.Home">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guardit" />


        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wslogo" />
    </LinearLayout>

    <View
        android:id="@+id/vw_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_header"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:id="@+id/ll_secheader"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@+id/vw_header"
        android:background="#F7F8FA"
        android:orientation="horizontal"
        android:weightSum="1">

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"

            android:textColor="@color/textcolor" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_month"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="August"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_gray_border"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/textcolor"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_offline"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/circle_red"
                android:text="August"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5f6f8"
                android:gravity="center"
                android:text="OFFLINE"
                android:textColor="@color/textcolor"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_secheader"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradeint_back"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_camera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        android:background="@color/white"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/camera" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        android:background="#FCFCFC"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/down" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"></LinearLayout>
                </LinearLayout>

                <!--  ........Second Layout...............................-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="102dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_map"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@color/white"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/geo" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_report"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@drawable/gradientgrey"
                            android:gravity="center">

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="REPORT\nINCIDENT"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_msg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@drawable/gradeint_green"
                            android:gravity="center">

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="MESSAGING"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_torch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@color/white"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/activity" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_weight=".5"
                            android:background="@drawable/shadow"></View>
                        <!-- <View
                             android:layout_width="0dp"
                             android:layout_weight=".5"
                             android:layout_height="12dp"
                             android:rotation="180"
                             android:background="@drawable/shadow"></View>-->
                    </LinearLayout>
                </RelativeLayout>
                <!--  ................Second Layout.............................-->
                <!--.........................Third Layout............................-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="102dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_event"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@null"
                                android:src="@drawable/calendar_blue" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Event"
                                android:textColor="@color/textcolor" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_scan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@drawable/gradeint_blue"
                            android:gravity="center">

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="SCAN"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ta"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@drawable/gradeint_brown"
                            android:gravity="center">

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="T\u0026A"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/settings" />

                            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Setting"
                                android:textColor="@color/textcolor" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_weight=".5"
                            android:background="@drawable/shadow"
                            android:visibility="invisible"></View>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_weight=".5"
                            android:background="@drawable/shadow"
                            android:rotation="180"></View>
                    </LinearLayout>
                </RelativeLayout>
                <!--.........................THird Layout.........................-->
                <!-- ..........................Forth Layout.........................-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        android:background="#FCFCFC"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/up" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_abt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        android:background="#FCFCFC"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/about" />

                        <morgantech.com.gms.Utils.TextViewWorkSansRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="About"
                            android:textColor="@color/textcolor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"></LinearLayout>
                </LinearLayout>

                <!--..........................Forth Layout...........................-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shadow_2"></View>

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/leave"
                        android:text="Logout"
                        android:textColor="@color/black_overlay" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ll_sha"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="204dp"
                    android:background="@drawable/shadowl"
                    android:rotation="180"></View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="204dp"
                    android:background="@drawable/shadowl"></View>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
