<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="morgantech.com.gms.Home">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guardit" />


        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wslogo" />
    </LinearLayout>

    <View
        android:id="@+id/vw_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_header"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:id="@+id/ll_secheader"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@+id/vw_header"
        android:background="#F7F8FA"
        android:orientation="horizontal"
        android:weightSum="1">

        <morgantech.com.gms.Utils.TextViewWorkSansRegular
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"

            android:textColor="@color/textcolor" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_month"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="August"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_gray_border"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/textcolor"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_offline"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/circle_red"
                android:text="August"
                android:textSize="16dp" />

            <morgantech.com.gms.Utils.TextViewWorkSansRegular
                android:id="@+id/tv_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5f6f8"
                android:gravity="center"
                android:text="OFFLINE"
                android:textColor="@color/textcolor"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:background="#cdcdcd"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S No."
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activity"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Info"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Status"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            />



    </LinearLayout>






</LinearLayout>
